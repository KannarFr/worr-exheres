require gem [ has_rdoc=true ]

SUMMARY="Blog aware, static site generator"
DESCRIPTION="
Jekyll is a simple, blog aware, static site generator. It can generate static sites from markdown,
and add features like syntax highlighting.

It's the engine behind Github pages.
"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-ruby/classifier[~>1.3][ruby_abis:*(-)?]
        dev-ruby/colorator[~>0.1][ruby_abis:*(-)?]
        dev-ruby/jekyll-coffeescript[~>1.0][ruby_abis:*(-)?]
        dev-ruby/jekyll-gist[~>1.0][ruby_abis:*(-)?]
        dev-ruby/jekyll-paginate[~>1.0][ruby_abis:*(-)?]
        dev-ruby/jekyll-sass-converter[~>1.0][ruby_abis:*(-)?]
        dev-ruby/jekyll-watch[~>1.0][ruby_abis:*(-)?]
        dev-ruby/kramdown[~>1.3][ruby_abis:*(-)?]
        dev-ruby/liquid[~>2.6.1][ruby_abis:*(-)?]
        dev-ruby/mercenary[~>0.3.3][ruby_abis:*(-)?]
        dev-ruby/pygments-rb[~>0.6.0][ruby_abis:*(-)?]
        dev-ruby/redcarpet[~>3.1][ruby_abis:*(-)?]
        dev-ruby/safe_yaml[~>1.0][ruby_abis:*(-)?]
        dev-ruby/toml[~>0.1.0][ruby_abis:*(-)?]
"

