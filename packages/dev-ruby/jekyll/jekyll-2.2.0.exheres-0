require gem [ has_rdoc=true ]

SUMMARY="Blog aware, static site generator"
DESCRIPTION="
Jekyll is a simple, blog aware, static site generator. It can generate static sites from markdown,
and add features like syntax highlighting.

It's the engine behind Github pages.
"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS="
    rdiscount [[ description = [ Use rdiscount for markdown ] ]]
"

DEPENDENCIES="
    build+run:
        dev-ruby/classifier[~>1.3][ruby_abis:*(-)?]
        dev-ruby/colorator[~>0.1][ruby_abis:*(-)?]
        dev-ruby/commander[~>4.1.3][ruby_abis:*(-)?]
        dev-ruby/liquid[~>2.5.5][ruby_abis:*(-)?]
        dev-ruby/listen[~>1.3][ruby_abis:*(-)?]
        dev-ruby/maruku[~>0.7.0][ruby_abis:*(-)?]
        dev-ruby/pygments-rb[~>0.5.0][ruby_abis:*(-)?]
        dev-ruby/redcarpet[~>2.3.0][ruby_abis:*(-)?]
        dev-ruby/safe_yaml[~>0.9.7][ruby_abis:*(-)?]
        dev-ruby/toml[~>0.1.0][ruby_abis:*(-)?]
        rdiscount? ( dev-ruby/rdiscount[ruby_abis:*(-)?] )
"

BUGS_TO="will@worrbase.com"

