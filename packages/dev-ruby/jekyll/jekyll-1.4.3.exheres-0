require gem [ has_rdoc=true ]

SUMMARY="Blog aware, static site generator"
DESCRIPTION="
Jekyll is a simple, blog aware, static site generator. It can generate static sites from markdown,
and add features like syntax highlighting.

It's the engine behind Github pages.
"

LICENCES="BSD-4"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS="
    rdiscount [[ description = [ Use rdiscount for markdown ] ]]
"

DEPENDENCIES="
    build+run:
        dev-ruby/classifier[>=1.3.1]
        dev-ruby/directory_watcher[>=1.1.1]
        dev-ruby/kramdown[~>0.14.0]
        dev-ruby/liquid[>=1.9.0]
        dev-ruby/maruku[>=0.5.9]
        dev-ruby/pygments-rb[~>0.3.2]
        rdiscount? ( dev-ruby/rdiscount )
"

BUGS_TO="will@worrbase.com"

